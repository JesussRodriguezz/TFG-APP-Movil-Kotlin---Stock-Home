<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Base.Theme.TFGapp" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Theme.TFGapp" parent="Base.Theme.TFGapp" />

    <style name="TitleToolbar" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/primaryWhite</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TitleToolbarDark" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/primaryDark</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primaryDark</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="SmallButtonTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="ProductsListTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="ButtonLikeSearchBar" parent="Widget.Material3.Button.IconButton">
        <item name="android:background">@drawable/shape_search_bar</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="image_rounded" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="image_roundedstock" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>
    <style name="ActiveItemIndicatorStyle">
        <item name="android:background">@color/transparent</item>
    </style>






    <style name="RoundedFab" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedExtendedFab" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="OrderBySelector" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="boxBackgroundColor">@color/accentRed</item> <!-- Usar boxBackgroundColor -->
    </style>
    <style name="FullScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="CustomDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

        <style name="NumberPickerStyle">
            <item name="android:textColorSecondary">@color/transparent</item>
        </style>


</resources>