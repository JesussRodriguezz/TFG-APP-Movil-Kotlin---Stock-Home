<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primaryGrey"
    android:gravity="center_vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivProductApiSearchImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        android:contentDescription="@string/product_image"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/image_rounded"
        tools:src="@drawable/nestea" />

    <TextView
        android:id="@+id/tvProductApiSearchName"
        style="@style/ProductsListTextStyle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/primaryDark"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintWidth_max="100dp"
        app:layout_constraintWidth_min="0dp"
        tools:text="Categsfdsdforysdddddddddddddddddddddddd"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <ImageButton
        android:id="@+id/ibBoughtProduct"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_add"
        app:tint="@color/black"
        android:contentDescription="@string/ibboughtproduct" />


</LinearLayout>