<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primaryGrey">


    <TextView
        android:id="@+id/tvProductName"
        style="@style/ProductsListTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:paddingStart="16dp"
        android:text="Product Name"
        android:textColor="@color/black" />

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/ivProductIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        tools:src="@drawable/ic_panaderia"
        android:contentDescription="ivProductIcon" />

    <ImageButton
        android:id="@+id/ibAddProductToList"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="24dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_add"
        app:tint="@color/black"
        android:contentDescription="ibAddProductToList" />


</LinearLayout>