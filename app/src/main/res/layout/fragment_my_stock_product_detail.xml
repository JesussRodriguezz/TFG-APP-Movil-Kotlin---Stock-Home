<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mystockproductscan.MyStockProductDetailFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivProductApiSearchImage"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:contentDescription="@string/product_image"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/fotopruebaagua" />

    <TextView
        android:id="@+id/tvProductId"
        style="@style/ProductsListTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center_horizontal"
        tools:text="Prueba item name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivProductApiSearchImage" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginVertical="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProductId" />

    <TextView
        android:id="@+id/tvExpireDataTitle"
        style="@style/ProductsListTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/expire_in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="16dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvExpireDataTitle">

        <Button
            android:id="@+id/btn1Week"
            style="@style/SmallButtonTextStyle"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="@color/primaryGrey"
            android:textColor="@color/black"
            android:text="@string/_1_week"
            android:textSize="16sp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingHorizontal="0dp"
            android:includeFontPadding="false" />

        <Button
            android:id="@+id/btn2Weeks"
            style="@style/SmallButtonTextStyle"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="@color/primaryGrey"
            android:textColor="@color/black"
            android:text="@string/_2_weeks"
            android:textSize="16sp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingHorizontal="0dp"
            android:includeFontPadding="false" />

        <Button
            android:id="@+id/btn1Month"
            style="@style/SmallButtonTextStyle"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="@color/primaryGrey"
            android:textColor="@color/black"
            android:text="@string/_1_month"
            android:textSize="16sp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingHorizontal="0dp"
            android:includeFontPadding="false" />

        <Button
            android:id="@+id/btn2Months"
            style="@style/SmallButtonTextStyle"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="@color/primaryGrey"
            android:textColor="@color/black"
            android:text="@string/_3_months"
            android:textSize="16sp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingHorizontal="0dp"
            android:includeFontPadding="false" />
    </GridLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/efAddStockItem"
        android:contentDescription="@string/expire_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:backgroundTint="@color/accentRed"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/accentRed"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedExtendedFab"
        app:tint="@color/white" />

    <ImageButton
        android:id="@+id/ibBackArrow"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/ibbackarrow"
        android:src="@drawable/ic_back_arrow_big"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>
