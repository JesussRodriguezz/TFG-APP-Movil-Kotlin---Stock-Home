<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    tools:context=".ui.mystockproductsmanual.MyStockProductManualFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilNewProductName"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:hint="Nombre del producto"
            app:boxBackgroundColor="@color/primaryGrey"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxStrokeColor="@color/accentRed"
            app:hintTextColor="@color/accentRed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ibBackArrow">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNewProductName"
                style="@style/TextInputEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tilNewProductName" />

        <LinearLayout
            android:id="@+id/llAddPhotoorIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/SmallButtonTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/photo"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <FrameLayout
                    android:id="@+id/flAddPhoto"
                    android:layout_width="120dp"
                    android:layout_height="120dp">

                    <ImageView
                        android:id="@+id/ivAddPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@color/primaryGrey"
                        android:padding="25dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_camera" />
                </FrameLayout>

            </LinearLayout>

            <TextView
                style="@style/SmallButtonTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="16dp"
                android:text="@string/o"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/SmallButtonTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/icon"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/ivAddIcon"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@color/primaryGrey"
                    android:padding="25dp"
                    android:src="@drawable/ic_icon" /> <!-- Reemplaza con el icono de tu martini -->

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llAddPhotoorIcon" />

        <TextView
            android:id="@+id/tvExpireDataTitle"
            style="@style/ProductsListTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/expire_in"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider2" />


        <GridLayout
            android:id="@+id/glExpireDataButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp"
            android:columnCount="2"
            android:rowCount="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvExpireDataTitle">

            <Button
                android:id="@+id/btn1Week"
                style="@style/SmallButtonTextStyle"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/primaryGrey"
                android:includeFontPadding="false"
                android:paddingHorizontal="0dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:text="@string/_1_week"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn2Weeks"
                style="@style/SmallButtonTextStyle"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/primaryGrey"
                android:includeFontPadding="false"
                android:paddingHorizontal="0dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:text="@string/_2_weeks"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn1Month"
                style="@style/SmallButtonTextStyle"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/primaryGrey"
                android:includeFontPadding="false"
                android:paddingHorizontal="0dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:text="@string/_1_month"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn2Months"
                style="@style/SmallButtonTextStyle"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/primaryGrey"
                android:includeFontPadding="false"
                android:paddingHorizontal="0dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:text="@string/_3_months"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </GridLayout>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/glExpireDataButtons" />

        <LinearLayout
            android:id="@+id/llCategorySuggested"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider3">

            <TextView
                android:id="@+id/tvSuggestedCategory"
                style="@style/ProductsListTextStyle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:layout_marginStart="16dp"
                android:text="@string/category_suggested" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvCategory"
                android:layout_width="160dp"
                android:layout_height="44dp"
                android:layout_gravity="center_vertical"
                app:cardBackgroundColor="@color/accentRed"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:id="@+id/llContentContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivCategoryIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="4dp"
                        android:contentDescription="@string/ivcategoryicon"
                        tools:src="@drawable/ic_panaderia" />


                    <TextView
                        android:id="@+id/tvCategoryName"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_medium"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintWidth_default="wrap"
                        app:layout_constraintWidth_max="100dp"
                        app:layout_constraintWidth_min="0dp"
                        tools:text="Categoryaaaaaaa" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/tvChangeCategory"
            style="@style/CustomDialogStyle"
            android:textColor="@color/primaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Cambiar categoria"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llCategorySuggested" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCategories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:layout_marginStart="12dp"
            android:scrollbars="none"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider3" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/efAddStockItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:backgroundTint="@color/accentRed"
            android:src="@drawable/ic_add"
            app:backgroundTint="@color/accentRed"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:shapeAppearanceOverlay="@style/RoundedExtendedFab"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/ibBackArrow"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/ibbackarrow"
            android:src="@drawable/ic_back_arrow_big"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
