<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="128dp"
    android:layout_marginHorizontal="0dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/primaryGrey"
    app:cardCornerRadius="24dp"
    >
    <ImageButton
        android:id="@+id/ibDeleteStockProduct"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_delete"
        app:tint="@color/accentRed"
        android:contentDescription="ibSettings" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivStockProduct"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:contentDescription="Product Image"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/image_rounded"
            tools:src="@drawable/nestea" />

        <TextView
            android:id="@+id/tvStockProductName"
            style="@style/TitleToolbarDark"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColor="@color/primaryDark"
            tools:text="PRUEBA" />

    </LinearLayout>

</androidx.cardview.widget.CardView>